@model IEnumerable<ABCapp.Models.ProductEntity>

@{
    ViewData["Title"] = "Home";
}

<h2>Product List</h2>

<a asp-controller="Home" asp-action="Upload" class="btn btn-primary mb-3">Add New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.RowKey" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@product.RowKey" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
